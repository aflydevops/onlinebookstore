pipeline{
    agent any
    environment{
        DOCKERHUB_CREDENTIALS= credentials('docker_hub')
    }
    stages{
        stage("build as code"){
            steps{
                sh 'mvn clean install'
            }
        }
        stage('Build a docker image'){
            steps{
                script{

                    sh "docker build -t kallepalli/tomcatimage:${BUILD_NUMBER} ."
                }
            }
        }
        stage('push a image'){
            steps{
                script{
                    withCredentials([string(credentialsId: 'dockerpwd', variable: 'mydockerpasswd')]) {

                    sh "docker login -u kallepalli -p ${mydockerpasswd}"
                    }
                    sh "docker push kallepalli/tomcatimage:${BUILD_NUMBER}"
                }
            }
        }
        stage("Run image as conatiner"){
            steps{
                script{
                    sh "docker run -itd --name tomcatimage -p 8081:8080 kallepalli/tomcatimage:${BUILD_NUMBER} "
                }
            }
        }
    }
}