pipeline{
    agent any
    environment{
        DOCKER_CREDENTIALS = credentials('docker')
    }
    stages{
        stage('build code'){
            steps{
                sh "mvn clean install"
            }

        }
        stage('test code'){
            steps{
                sh "mvn test"
            }
        }
        stage('build image'){
            steps{
                script{
                    sh "docker build -t rakesh958/online:${BUILD_NUMBER} ."

                }
            }
        } 
        stage('push to hub'){
            steps{
                script{
                    withCredentials([string(credentialsId: 'dockerpwd', variable: 'dockercred')]) {
                        sh "docker login -u rakesh958 -p ${dockerpwd}"
                        } 
                        sh "docker push rakesh958/online:${BUILD_NUMBER}"
                }
            }
        }  
    }
}